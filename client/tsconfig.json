{
    "compilerOptions": {
      "baseUrl": "./src",
      "paths": {
        "components": ["components"],
        "styles": ["styles"],
        "pages": ["app/pages"],
        "config": ["config"],
        "utils": ["utils"],
        "shared": ["shared"],
        "store": ["store"],
        "root": ["root"]
      },
      "noEmit": true,
      "allowJs": true,
      "sourceMap": true,
      "strict": true,
      "strictNullChecks": true,
      "skipLibCheck": true,
      "module": "esnext",
      "target": "es6",
      "moduleResolution": "node",
      "jsx": "react",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true
    },
    "include": ["src/**/*", "declarations.d.ts"],
    "exclude": ["node_modules"]
  }